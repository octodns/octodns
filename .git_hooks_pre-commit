#!/bin/bash

# Scripts path
SCRIPT_PATH="$( dirname -- "$( readlink -f -- "${0}"; )"; )/script"
# Activate OctoDNS Python venv
source "${SCRIPT_PATH}/common.sh"

./script/changelog check
./script/lint
./script/format --check --quiet || (
    echo "Formatting check failed, run ./script/format" &&
    exit 1
)
./script/coverage
